.border-content
  background url(../imgs/border-content.png) repeat-y 75% 0

//FOOTER
#footer-top
  background url(../imgs/footer.png) repeat-x
  height 345px
  background-color #151b26
  h3
    font 24px 'Goudy Bookletter 1911', serif
    color #ffffff
  #footer-logo
    max-width 35%
    & + span
      font italic 11px 'Georgia', serif
      color #ffffff
      text-shadow 1px 1px 1px rgba(0, 0, 0, 0.7)
  p img
    float left
    margin-right 12px
  span, li a
    font 12px 'Droid Sans', sans-serif
    color #aebdd1
  ul
    list-style-type none
    //bullets
    li
      &:before
        content url(../imgs/bullets.png)
        float left;
        margin-left -10px

  .section-2
    ul
      margin-left 115px
    h3
      margin-left 140px
  .section-3
    ul
      margin-left 125px
    h3
      margin-left 150px

.proba
  border 1px solid lightgreen

#footer-bottom
  background-color #131a25
  border-top 1px solid #2c333e
  p
    margin 20px 0 20px 0
